{
  "name": "domtranslator",
  "version": "0.0.1",
  "scripts": {
    "test": "jest",
    "test-fast": "TEST_FAST=true jest",
    "prettify": "prettier --write \"{*,**/*}.{ts,tsx,js,jsx}\" && eslint --fix \"{*,**/*}.{ts,tsx,js,jsx}\" && stylelint --fix \"{*,**/*}.css\"",
    "lint:text": "npx textlint \"{*,**/*}.md\"",
    "browserslist:update": "npx browserslist@latest --update-db",
    "packages:upgrade": "npx npm-check-updates -u",
    "configure": "husky install && npm run browserslist:update",
    "prepare": "npm run configure"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "eslint": "^8.40.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "stylelint": "^14.8.3",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-no-unsupported-browser-features": "^5.0.3",
    "textlint": "^12.1.1",
    "textlint-filter-rule-comments": "^1.2.2",
    "textlint-rule-common-misspellings": "^1.0.1",
    "textlint-rule-write-good": "^2.0.0",
    "ts-jest": "^28.0.2",
    "typescript": "^4.6.4"
  }
}