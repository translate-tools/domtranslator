{
	"name": "domtranslator",
	"version": "0.0.1",
	"license": "Apache-2.0",
	"author": "Robert Vitonsky <https://github.com/vitonsky>",
	"homepage": "https://github.com/translate-tools/domtranslator",
	"repository": {
		"type": "git",
		"url": "https://github.com/translate-tools/domtranslator"
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "gulp",
		"test": "jest",
		"test-fast": "TEST_FAST=true jest",
		"prettify": "prettier --write \"{*,**/*}.{ts,tsx,js,jsx}\" && eslint --fix \"{*,**/*}.{ts,tsx,js,jsx}\" && stylelint --fix \"{*,**/*}.css\"",
		"lint:text": "textlint \"{*,**/*}.md\"",
		"packages:upgrade": "npm-check-updates -u",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.6.3",
		"@commitlint/config-conventional": "^17.6.3",
		"@types/jest": "^29.5.1",
		"@types/node": "^20.1.0",
		"@typescript-eslint/eslint-plugin": "^6.1.0",
		"@typescript-eslint/parser": "^5.59.2",
		"del": "^7.0.0",
		"eslint": "^8.40.0",
		"eslint-plugin-simple-import-sort": "^10.0.0",
		"eslint-plugin-unused-imports": "^2.0.0",
		"gulp": "^4.0.2",
		"gulp-clean-package": "^0.0.2",
		"gulp-sourcemaps": "^3.0.0",
		"gulp-typescript": "^6.0.0-alpha.1",
		"husky": "^8.0.3",
		"jest": "^29.5.0",
		"jest-environment-jsdom": "^29.5.0",
		"jest-extended": "^3.2.4",
		"jsdom": "^22.0.0",
		"lint-staged": "^13.2.2",
		"merge-stream": "^2.0.0",
		"npm-check-updates": "^16.10.10",
		"prettier": "^2.8.8",
		"stylelint": "^15.6.1",
		"stylelint-config-standard": "^33.0.0",
		"stylelint-no-unsupported-browser-features": "^6.1.0",
		"textlint": "^13.3.2",
		"textlint-filter-rule-comments": "^1.2.2",
		"textlint-rule-common-misspellings": "^1.0.1",
		"textlint-rule-write-good": "^2.0.0",
		"ts-jest": "^29.1.0",
		"typescript": "^5.0.4"
	}
}
